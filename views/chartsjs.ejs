<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="refresh" content="500" />
    <title>Graficas</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>
    <link rel="stylesheet" type="text/css" href="/stylesheets/graphs.css" />

    <script src="https://cdn.plot.ly/plotly-latest.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-sweetalert/1.0.1/sweetalert.min.js" integrity="sha512-MqEDqB7me8klOYxXXQlB4LaNf9V9S0+sG1i8LtPOYmHqICuEZ9ZLbyV3qIfADg2UJcLyCm4fawNiFvnYbcBJ1w==" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-sweetalert/1.0.1/sweetalert.css" integrity="sha512-f8gN/IhfI+0E9Fc/LKtjVq4ywfhYAVeMGKsECzDUHcFJ5teVwvKTqizm+5a84FINhfrgdvjX8hEJbem2io1iTA==" crossorigin="anonymous" />

    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/chartjs-plugin-annotation/0.5.7/chartjs-plugin-annotation.min.js"></script>
  </head>

  <body>
    <%- include(navbar) %>
    
    <% function reviver(key, value) {
      if(typeof value === 'object' && value !== null) {
        if (value.dataType === 'Map') {
          return new Map(value.value);
        }
      }
      return value;
    } 

    var parts = JSON.parse(data, reviver);
    var tables = parts.values().next().value;
    %>


    <div class="main-container">
      <div id="test-no-container">
        <label for="test-no-selecter">Select a Part Number:</label>
        <div  class="position-relative">
          <select id="test-no-selecter" class="custom-select custom-select-lg mb-3 bg-white">
            <% parts.forEach(function(value, key, map){ %>
              <option><%-key%></option>
            <% }); %>
          </select>
          <i id="configuration-btn" class="fas fa-tools position-absolute text-light material-icons" style='font-size: 3rem; top: 0; right: -15%;'></i>
        </div>
      </div>

      <div class="second-container">
        <% for(var table of tables){ %>
          <%- include(chart_legend, {title: table.name,id: table.id}) %>
        <% } %>
      </div>
    </div>

    <div class="buttons dropdown col-5">
      <select id="select">
        <% for(var table of tables){ %>
          <option value="<%-table.id%>"><%-table.name%></option>
        <% } %>
      </select>
    </div>

    <%- include(footer) %>

    <!-- CHARTS CONFIGURATION -->
    <div id="chart-configuration" class="front-window justify-content-center align-items-center" style="display: none;">
      <div class="container bg-light border rounded position-relative">
        <i id="close-settings" class="fas fa-window-close pointer hov-red" style="position: absolute; top: 0; right: 0;"></i>         
        <form>
          <h3 class="text-center mt-3">Select the Tests that you want to see.</h3>
          <section class="container w-100">
            <div class="row">
              <div class="col-lg">
                <div>
                  <label for="non_selected_tests">Hide</label>
                  <select name="non_selected_tests" id="non_selected_tests" class="w-100" size="5" multiple></select>
                </div>
              </div>
              
              <div class="move-buttons text-center">
                  <button type="button" id="btnLeft-setting" class="mx-auto btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> 
                  </button>
                  <button type="button" id="btnRight-setting" class="mx-auto btn btn-secondary">
                    <i class="fas fa-arrow-right"></i> 
                  </button>
              </div>

              <div class="col-lg">
                <label for="selected_tests">View</label>
                <select name="selected_tests" id="selected_tests" class="w-100" size="5" multiple>
                  <% for(var table of tables){ %>
                    <option value="<%-table.id%>"><%-table.name%></option>
                  <% } %>
                </select>
              </div>
            </div>
          </section>

          <button type="submit" id="apply-settings" class="d-block btn btn-primary my-3 mx-auto">Apply</button>
        </form>
      </div>
    </div>

    <!-- DOWNLOAD OPTION -->
    <div id="pdf-selection" class="front-window justify-content-center align-items-center" style="display: none;">
      <div class="container bg-light border rounded position-relative">
        <i id="close-download" class="fas fa-window-close pointer hov-red" style="position: absolute; top: 0; right: 0;"></i> 

        <form id="pdf-form">
        <h3 class="text-center mt-3">Select the Part Numbers to generate the PDF.</h3>
          <section class="container w-100">
            <div class="row">
              <div class="col-lg">
                <div>
                  <label for="non_selected_part_num">No selected</label>
                  <select name="non_selected_part_num" id="non_selected_part_num" class="w-100" size="5" multiple></select>
                </div>
              </div>
              
              <div class="move-buttons text-center">
                  <button type="button" id="btnLeft" class="mx-auto btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> 
                  </button>
                  <button type="button" id="btnRight" class="mx-auto btn btn-secondary">
                    <i class="fas fa-arrow-right"></i> 
                  </button>
              </div>

              <div class="col-lg">
                <label for="selected_part_num">Selected</label>
                <select name="selected_part_num" id="selected_part_num" class="w-100" size="5" multiple>
                  <% parts.forEach(function(value, key, map){ %>
                    <option value="<%-key%>"><%-key%></option>
                  <% }); %>
                </select>
              </div>
            </div>
          </section>

          <h3 class="text-center mt-3">Select the Sections to generate the PDF.</h3>
          <section class="container w-75 d-flex flex-row justify-content-between">
            <div class="form-check">
              <input type="checkbox" class="form-check-input" id="option-summary" checked>
              <label class="form-check-label" for="option-summary">Summary</label>
            </div>
            <div class="form-check">
              <input type="checkbox" class="form-check-input" id="option-pareto" checked>
              <label class="form-check-label" for="option-pareto">Pareto</label>
            </div>
            <div class="form-check">
              <input type="checkbox" class="form-check-input" id="option-charts" checked>
              <label class="form-check-label" for="option-charts">Charts</label>
            </div>
          </section>

          <button type="submit" id="generate-pdf" class="d-block btn btn-primary my-3 mx-auto">Generate</button>
        </form>
      </div>
    </div>
    
    <script>
      var str = <%- data %>;
      var data = new Map(str.value);
    </script>
    <script src=" /js/GraficasJs/graph.js"></script>
    <script src="/js/GraficasJs/socketio.js" charset="utf-8"></script>
    <script src=" /js/GraficasJs/socketcomms.js "></script>

    <button id="send" class="btn btn-info float"><p>Download pdf</p> <i class="fas fa-file-download"></i> </button>
  </body>
</html>
